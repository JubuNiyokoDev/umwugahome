
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: a user must be authenticated to read or write anything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // More specific rules can be added below to restrict access further
    // For example, to allow users to only edit their own profile:
    // match /users/{userId} {
    //   allow read, write: if request.auth.uid == userId;
    // }
  }
}
