/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a user-ownership model where users can only read and write their own data in the 'users' collection.
 *  Artisan, TrainingCenter, Mentor, Youth profiles are linked to a user via the userId field and are secured accordingly.
 *  Products, Courses, and Orders are publicly readable but only writable by the owner (the Artisan or TrainingCenter).
 *  Schema validation is relaxed to allow for rapid prototyping.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the user themselves.
 * - /artisans/{artisanId}: Stores artisan profiles, linked to users via the userId field.
 * - /training-centers/{trainingCenterId}: Stores training center profiles, linked to users via the userId field.
 * - /mentors/{mentorId}: Stores mentor profiles, linked to users via the userId field.
 * - /products/{productId}: Stores product information, linked to artisans via the artisanId field.
 * - /courses/{courseId}: Stores course information, linked to training centers via the centerId field.
 * - /orders/{orderId}: Stores order information, linked to artisans and users.
 *
 * Key Security Decisions:
 * - Users can only manage their own user documents.
 * - Artisan, TrainingCenter and Mentor profile creation is allowed only by the associated user.
 * - Products and Courses are publicly readable, but only the owner can create, update, or delete them.
 *
 * Denormalization for Authorization:
 * - Artisan, TrainingCenter, and Mentor documents include a 'userId' field, which is used to verify ownership and enforce access control.
 *
 * Structural Segregation:
 * - No explicit structural segregation is implemented.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to the 'users' collection.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) User with UID 'user123' can create their own user document.
     * @allow (get,update,delete) User with UID 'user123' can access their own user document.
     * @deny (create) User with UID 'user456' cannot create a user document with ID 'user123'.
     * @deny (get,update,delete) User with UID 'user456' cannot access user document with ID 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Verified authentication
      function isSignedIn() {
        return request.auth != null;
      }
      // Verifies the requesting user
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      //Verifies existing document ownership
      function isExistingOwner(userId) {
        return request.auth.uid == resource.data.userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to the 'artisans' collection.
     * @path /databases/{database}/documents/artisans/{artisanId}
     * @allow (create) User with UID 'user123' can create an artisan profile if artisan.userId == user123.
     * @allow (get,list) Any user can read artisan profiles.
     * @allow (update,delete) User with UID 'user123' can update/delete their artisan profile (artisan.userId == user123).
     * @deny (create) User with UID 'user456' cannot create an artisan profile with userId 'user123'.
     * @deny (update,delete) User with UID 'user456' cannot update/delete artisan profile with userId 'user123'.
     * @principle Enforces document ownership for writes; public read access.
     */
    match /artisans/{artisanId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isArtisanOwner(artisanId) {
        return request.auth.uid == get(/databases/$(database)/documents/artisans/$(artisanId)).data.userId;
      }

      function isExistingArtisanOwner(artisanId) {
          return isSignedIn() && request.auth.uid == resource.data.userId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingArtisanOwner(artisanId);
      allow delete: if isExistingArtisanOwner(artisanId);
    }

     /**
      * @description Controls access to the 'training-centers' collection.
      * @path /databases/{database}/documents/training-centers/{trainingCenterId}
      * @allow (create) User with UID 'user123' can create a training center profile if training-center.userId == user123.
      * @allow (get,list) Any user can read training center profiles.
      * @allow (update,delete) User with UID 'user123' can update/delete their training center profile (training-center.userId == user123).
      * @deny (create) User with UID 'user456' cannot create a training center profile with userId 'user123'.
      * @deny (update,delete) User with UID 'user456' cannot update/delete training center profile with userId 'user123'.
      * @principle Enforces document ownership for writes; public read access.
      */
    match /training-centers/{trainingCenterId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isCenterOwner(centerId) {
          return request.auth.uid == get(/databases/$(database)/documents/training-centers/$(centerId)).data.userId;
      }

      function isExistingCenterOwner(centerId) {
          return isSignedIn() && request.auth.uid == resource.data.userId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingCenterOwner(centerId);
      allow delete: if isExistingCenterOwner(centerId);
    }

    /**
     * @description Controls access to the 'mentors' collection.
     * @path /databases/{database}/documents/mentors/{mentorId}
     * @allow (create) User with UID 'user123' can create a mentor profile if mentor.userId == user123.
     * @allow (get,list) Any user can read mentor profiles.
     * @allow (update,delete) User with UID 'user123' can update/delete their mentor profile (mentor.userId == user123).
     * @deny (create) User with UID 'user456' cannot create a mentor profile with userId 'user123'.
     * @deny (update,delete) User with UID 'user456' cannot update/delete mentor profile with userId 'user123'.
     * @principle Enforces document ownership for writes; public read access.
     */
    match /mentors/{mentorId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isMentorOwner(mentorId) {
          return request.auth.uid == get(/databases/$(database)/documents/mentors/$(mentorId)).data.userId;
      }

      function isExistingMentorOwner(mentorId) {
          return isSignedIn() && request.auth.uid == resource.data.userId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingMentorOwner(mentorId);
      allow delete: if isExistingMentorOwner(mentorId);
    }


    /**
     * @description Controls access to the 'products' collection.
     * @path /databases/{database}/documents/products/{productId}
     * @allow (create) User with UID 'user123' can create a product if the artisanId matches an artisan owned by the user (artisan.userId == user123).
     * @allow (get,list) Any user can read product information.
     * @allow (update,delete) User with UID 'user123' can update/delete the product if the artisanId matches an artisan owned by the user.
     * @deny (create) User with UID 'user456' cannot create a product for artisan with artisanId associated with user 'user123'.
     * @deny (update,delete) User with UID 'user456' cannot update/delete product of artisan with artisanId associated with user 'user123'.
     * @principle Enforces owner-only writes for products; public read access.
     */
    match /products/{productId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function getArtisan(artisanId) {
          return get(/databases/$(database)/documents/artisans/$(artisanId)).data.userId;
      }

      function isArtisanOwner(artisanId) {
          return isSignedIn() && request.auth.uid == getArtisan(artisanId);
      }

      function isExistingArtisanOwner(artisanId) {
          return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/artisans/$(resource.data.artisanId)).data.userId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isArtisanOwner(request.resource.data.artisanId);
      allow update: if isSignedIn() && isExistingArtisanOwner(resource.data.artisanId);
      allow delete: if isSignedIn() && isExistingArtisanOwner(resource.data.artisanId);
    }

    /**
     * @description Controls access to the 'courses' collection.
     * @path /databases/{database}/documents/courses/{courseId}
     * @allow (create) User with UID 'user123' can create a course if the centerId matches a training center owned by the user (training-center.userId == user123).
     * @allow (get,list) Any user can read course information.
     * @allow (update,delete) User with UID 'user123' can update/delete the course if the centerId matches a training center owned by the user.
     * @deny (create) User with UID 'user456' cannot create a course for training center with centerId associated with user 'user123'.
     * @deny (update,delete) User with UID 'user456' cannot update/delete course of training center with centerId associated with user 'user123'.
     * @principle Enforces owner-only writes for courses; public read access.
     */
    match /courses/{courseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function getCenter(centerId) {
          return get(/databases/$(database)/documents/training-centers/$(centerId)).data.userId;
      }

      function isCenterOwner(centerId) {
          return isSignedIn() && request.auth.uid == getCenter(centerId);
      }

      function isExistingCenterOwner(centerId) {
          return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/training-centers/$(resource.data.centerId)).data.userId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isCenterOwner(request.resource.data.centerId);
      allow update: if isSignedIn() && isExistingCenterOwner(resource.data.centerId);
      allow delete: if isSignedIn() && isExistingCenterOwner(resource.data.centerId);
    }

    /**
     * @description Controls access to the 'orders' collection.
     * @path /databases/{database}/documents/orders/{orderId}
     * @allow (get,list) Any user can read orders.
     * @allow (create,update,delete) No one can create, update or delete orders
     * @principle  Public read access, no write access.
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}