rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @returns {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the user IDs match and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Enforces document ownership for user profiles.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) - Authenticated user creates their own profile with matching UID.
     * @allow (get, list) - Authenticated user reads their own profile.
     * @allow (update, delete) - Authenticated user updates or deletes their own profile.
     * @deny (create) - Unauthenticated user attempts to create a profile.
     * @deny (get, list) - Authenticated user attempts to read another user's profile.
     * @deny (update, delete) - Authenticated user attempts to modify or delete another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows public read access to artisan profiles and restricts write access to the owner.
     * @path /databases/{database}/documents/artisans/{artisanId}
     * @allow (get, list) - Any user can read artisan profiles.
     * @allow (create) - Authenticated user creates an artisan profile, setting the userId to their UID.
     * @allow (update, delete) - Only the artisan (based on userId) can update or delete their profile.
     * @deny (create) - Unauthenticated user attempts to create an artisan profile.
     * @deny (update, delete) - Another user attempts to modify or delete an artisan profile.
     * @principle Public read, owner-only writes, enforces document ownership for writes.
     */
    match /artisans/{artisanId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows public read access to training center profiles and restricts write access to the owner.
     * @path /databases/{database}/documents/training-centers/{trainingCenterId}
     * @allow (get, list) - Any user can read training center profiles.
     * @allow (create) - Authenticated user creates a training center profile, setting the userId to their UID.
     * @allow (update, delete) - Only the training center (based on userId) can update or delete their profile.
     * @deny (create) - Unauthenticated user attempts to create a training center profile.
     * @deny (update, delete) - Another user attempts to modify or delete a training center profile.
     * @principle Public read, owner-only writes, enforces document ownership for writes.
     */
    match /training-centers/{trainingCenterId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows public read access to mentor profiles and restricts write access to the owner.
     * @path /databases/{database}/documents/mentors/{mentorId}
     * @allow (get, list) - Any user can read mentor profiles.
     * @allow (create) - Authenticated user creates a mentor profile, setting the userId to their UID.
     * @allow (update, delete) - Only the mentor (based on userId) can update or delete their profile.
     * @deny (create) - Unauthenticated user attempts to create a mentor profile.
     * @deny (update, delete) - Another user attempts to modify or delete a mentor profile.
     * @principle Public read, owner-only writes, enforces document ownership for writes.
     */
    match /mentors/{mentorId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows public read access to product information and restricts write access to the artisan who owns the product.
     * @path /databases/{database}/documents/products/{productId}
     * @allow (get, list) - Any user can read product information.
     * @allow (create) - Authenticated user creates a product, provided they are the artisan.
     * @allow (update, delete) - Only the artisan (based on artisanId) can update or delete the product.
     * @deny (create) - Unauthenticated user attempts to create a product.
     * @deny (update, delete) - Another user attempts to modify or delete a product.
     * @principle Public read, artisan-only writes, enforces document ownership for writes.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.artisanId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.artisanId == request.auth.uid;
    }

    /**
     * @description Allows public read access to course information and restricts write access to the training center who owns the course.
     * @path /databases/{database}/documents/courses/{courseId}
     * @allow (get, list) - Any user can read course information.
     * @allow (create) - Authenticated user creates a course, provided they are the training center.
     * @allow (update, delete) - Only the training center (based on centerId) can update or delete the course.
     * @deny (create) - Unauthenticated user attempts to create a course.
     * @deny (update, delete) - Another user attempts to modify or delete a course.
     * @principle Public read, training-center-only writes, enforces document ownership for writes.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.centerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.centerId == request.auth.uid;
    }

    /**
     * @description Allows public read access to order information and restricts write access to the artisan who receives the order.
     * @path /databases/{database}/documents/orders/{orderId}
     * @allow (get, list) - Any user can read order information.
     * @allow (create) - Authenticated user creates an order.
     * @allow (update, delete) - Only the artisan (based on artisanId) can update or delete the order.
     * @deny (create) - Unauthenticated user attempts to create an order.
     * @deny (update, delete) - Another user attempts to modify or delete an order.
     * @principle Public read, artisan-only writes, enforces document ownership for writes.
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.artisanId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.artisanId == request.auth.uid;
    }
    
     /**
      * @description This rule blocks the 'batch operation' write.
      * @path /databases/(default)/documents/batch operation
      * @allow (create, update, delete) - Should be explicitly denied
      * @deny (create, update, delete) - All writes are denied.
      * @principle Prevents unauthorized bulk writes.
      */
    match /batch operation {
        allow create, update, delete: if false;
        allow get, list: if false;
    }
  }
}